{
  "files.associations": {
    "*.html": "liquid",
    "*.json": "liquid",
    "*.js": "liquid",
    "*.md": "markdown"
  },
  "[liquid]": {
    "editor.defaultFormatter": "sissel.shopify-liquid",
    "editor.formatOnSave": true,
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "emmet.includeLanguages": {
    "liquid": "html"
  }
}
